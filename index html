                <!-- Summary Stats (Mini Dashboard) -->
                <div class="grid grid-cols-2 md:grid-cols-4 border-t border-slate-100 divide-x divide-slate-100 bg-slate-50/50">
                    <div class="p-4 text-center">
                        <p class="text-[10px] uppercase tracking-widest text-slate-400 font-bold mb-1">Jumlah Subjek</p>
                        <p id="statSubjek" class="text-2xl font-black text-slate-800">0</p>
                    </div>
                    <div class="p-4 text-center">
                        <p class="text-[10px] uppercase tracking-widest text-slate-400 font-bold mb-1">Target ETR Terbaik</p>
                        <p id="statBestGrade" class="text-2xl font-black text-green-600">-</p>
