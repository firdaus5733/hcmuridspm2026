    <script>
        // Init Icons
        lucide.createIcons();
        
        // Pautan Google Sheets Published CSV
        const PUBLISHED_URL = "https://docs.google.com/spreadsheets/d/e/2PACX-1vSodUOEOzSGB_se_w_OS2pLTTqzu-C5E0juX9F_yNNReX4lm4s1--Eb2eH7giV0hhur7iL98uJferFt/pub?output=csv";

        let masterData = [];
        const icInput = document.getElementById('icInput');
        const searchBtn = document.getElementById('searchBtn');
        const resultsArea = document.getElementById('resultsArea');
        const statusText = document.getElementById('dataStatus');
        const statusDot = document.getElementById('statusDot');

        // Fungsi Memuatkan Data (Auto-Load)
        async function loadDatabase() {
            try {
                Papa.parse(PUBLISHED_URL, {
                    download: true,
                    header: true,
                    skipEmptyLines: true,
                    complete: function(results) {
                        masterData = results.data.map(row => {
                            const rawIc = row['No. KP'] || row['No KP'] || row['ic'] || "";
                            return { 
                                ...row, 
                                cleanIc: rawIc.toString().replace(/-/g, '').trim(),
                                // Ensure numeric values for charts
                                tovVal: parseInt(row['TOV']) || 0,
                                etrVal: parseInt(row['ETR']) || 0
                            };
                        });
                        
                        // Update UI Status
                        statusText.innerText = `Pangkalan Data Sedia (${masterData.length} Rekod)`;
                        statusText.classList.replace('text-slate-500', 'text-green-600');
                        statusDot.classList.replace('bg-yellow-500', 'bg-green-500');
                        statusDot.classList.add('animate-pulse');
                        
                        // Aktifkan butang
                        searchBtn.disabled = false;
                    },
                    error: function(err) {
                        console.error("Fetch Error:", err);
                        statusText.innerText = "Gagal mencapai pelayan data.";
                        statusText.classList.replace('text-slate-500', 'text-red-500');
                        statusDot.classList.replace('bg-yellow-500', 'bg-red-500');
                    }
                });
            } catch (e) {
                console.error(e);
            }
        }

        loadDatabase();

        // Event Handlers
        searchBtn.addEventListener('click', doSearch);
        icInput.addEventListener('keypress', (e) => e.key === 'Enter' && doSearch());

        function doSearch() {
            const queryIc = icInput.value.replace(/-/g, '').trim();
            
            // UI Reset
            document.getElementById('errorMessage').classList.add('hidden');
            resultsArea.classList.add('hidden');
            
            if (!queryIc) {
                showError("Sila masukkan No. Kad Pengenalan.");
                return;
            }

            setLoading(true);

            // Simulasi delay sedikit untuk UX (supaya user nampak proses)
            setTimeout(() => {
                const matches = masterData.filter(m => m.cleanIc === queryIc);

                if (matches.length > 0) {
                    renderResults(matches);
                } else {
                    showError(`Tiada rekod dijumpai bagi No. KP: ${queryIc}`);
                }
                setLoading(false);
            }, 600);
        }

        function renderResults(data) {
            const profile = data[0];
            
            // Populate Profile
            document.getElementById('resNama').innerText = profile['Nama Murid'] || "TIADA NAMA";
            document.getElementById('resSekolah').innerText = profile['Kod | Sekolah'] || '-';
            document.getElementById('resSekolahBadge').innerText = profile['Kelas '] || 'UMUM';

            // Calculate Statistics
            const totalSubjects = data.length;
            
            // Find Best Grade (Simplistic check for A+, A, A- etc)
            let bestGrade = '-';
            const grades = data.map(d => d['G ETR']).filter(g => g);
            if(grades.length > 0) {
                // Sort simple logic or just pick the first 'A' found
                bestGrade = grades.sort()[0]; 
            }

            // Calculate Averages
            const avgTov = Math.round(data.reduce((acc, curr) => acc + (parseInt(curr.TOV)||0), 0) / totalSubjects);
            const avgEtr = Math.round(data.reduce((acc, curr) => acc + (parseInt(curr.ETR)||0), 0) / totalSubjects);

            document.getElementById('statSubjek').innerText = totalSubjects;
            document.getElementById('statBestGrade').innerText = bestGrade;
            document.getElementById('statAvgTov').innerText = isNaN(avgTov) ? '-' : avgTov;
            document.getElementById('statAvgEtr').innerText = isNaN(avgEtr) ? '-' : avgEtr;

            // Render Table
            const tbody = document.getElementById('tableBody');
            tbody.innerHTML = '';

            data.forEach((item, index) => {
                const tr = document.createElement('tr');
                tr.className = "hover:bg-slate-50 transition group";
                
                // Progress Bar Widths
                const tovWidth = Math.min(parseInt(item.TOV) || 0, 100);
                const etrWidth = Math.min(parseInt(item.ETR) || 0, 100);

                tr.innerHTML = `
                    <td class="px-6 py-4 pl-8 border-l-4 border-transparent group-hover:border-blue-500 transition-colors">
                        <div class="font-bold text-slate-700 text-sm md:text-base">${item.MP || '-'}</div>
                    </td>
                    
                    <!-- TOV Column -->
                    <td class="px-4 py-4 text-center">
                        <div class="flex flex-col items-center justify-center gap-1">
                            <span class="text-sm font-bold text-slate-700">${item.TOV || '0'}</span>
                            <div class="w-16 h-1.5 bg-slate-100 rounded-full overflow-hidden">
                                <div class="h-full bg-slate-400 rounded-full" style="width: ${tovWidth}%"></div>
                            </div>
                            <span class="text-[10px] font-bold px-2 py-0.5 rounded border ${getGradeStyle(item.GTOV)}">${item.GTOV || '-'}</span>
                        </div>
                    </td>

                    <!-- OTR 1 -->
                    <td class="px-4 py-4 text-center">
                         <div class="flex flex-col items-center gap-1">
                            <span class="text-sm font-medium text-slate-600">${item['OTR 1'] || '0'}</span>
                            <span class="text-[10px] px-2 py-0.5 rounded border ${getGradeStyle(item['G OTR1'])}">${item['G OTR1'] || '-'}</span>
                        </div>
                    </td>

                    <!-- OTR 2 -->
                    <td class="px-4 py-4 text-center">
                         <div class="flex flex-col items-center gap-1">
                            <span class="text-sm font-medium text-slate-600">${item['OTR 2'] || '0'}</span>
                            <span class="text-[10px] px-2 py-0.5 rounded border ${getGradeStyle(item['G OTR 2'])}">${item['G OTR 2'] || '-'}</span>
                        </div>
                    </td>

                    <!-- ETR Column (Highlighted) -->
                    <td class="px-4 py-4 text-center bg-blue-50/30 border-x border-blue-50 group-hover:bg-blue-50/60 transition-colors">
                        <div class="flex flex-col items-center justify-center gap-1">
                            <span class="text-lg font-black text-blue-700">${item.ETR || '0'}</span>
                            <div class="w-20 h-2 bg-blue-100 rounded-full overflow-hidden shadow-inner">
                                <div class="h-full bg-blue-600 rounded-full" style="width: ${etrWidth}%"></div>
                            </div>
                            <span class="text-xs font-bold px-3 py-0.5 rounded-md border shadow-sm ${getGradeStyle(item['G ETR'])}">${item['G ETR'] || '-'}</span>
                        </div>
                    </td>

                    <!-- Beza -->
                    <td class="px-4 py-4 text-center">
                        <span class="font-bold text-slate-400 font-mono">${item['TOV-ETR'] || '0'}</span>
                    </td>
                `;
                // Stagger Animation
                tr.style.animation = `fadeInUp 0.3s ease forwards ${index * 0.05}s`;
                tr.style.opacity = '0'; // start hidden
                tbody.appendChild(tr);
            });

            resultsArea.classList.remove('hidden');
            // Smooth Scroll
            resultsArea.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        // Helper untuk Gaya Gred (Premium Look)
        function getGradeStyle(g) {
            if (!g) return 'bg-slate-50 border-slate-200 text-slate-400';
            g = g.toString().toUpperCase().trim();
            if (g.startsWith('A')) return 'bg-green-100 border-green-200 text-green-700 shadow-green-100';
            if (g.startsWith('B')) return 'bg-blue-50 border-blue-200 text-blue-700';
            if (g.startsWith('C')) return 'bg-yellow-50 border-yellow-200 text-yellow-700';
            if (g.startsWith('D')) return 'bg-orange-50 border-orange-200 text-orange-700';
            if (g.startsWith('E')) return 'bg-pink-50 border-pink-200 text-pink-700';
            if (g.startsWith('G')) return 'bg-red-50 border-red-200 text-red-700';
            return 'bg-slate-50 border-slate-200 text-slate-500';
        }

        function setLoading(isLoading) {
            searchBtn.disabled = isLoading;
            if (isLoading) {
                document.getElementById('btnText').innerText = "MENCARI...";
                document.getElementById('btnIcon').classList.add('hidden');
            } else {
                document.getElementById('btnText').innerText = "SEMAK";
                document.getElementById('btnIcon').classList.remove('hidden');
            }
        }

        function showError(msg) {
            document.getElementById('errorText').innerText = msg;
            document.getElementById('errorMessage').classList.remove('hidden');
        }
    </script>
</body>
</html>
